<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Main" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowBackground">@color/background</item>

        <item name="android:buttonStyle">@style/Theme.Main.Button</item>
        <item name="android:textViewStyle">@style/Theme.Main.TextView</item>
    </style>

    <style name="Theme.Main.Button">
        <item name="android:background">@drawable/button</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingTop">@dimen/vertical_padding</item>
        <item name="android:paddingBottom">@dimen/vertical_padding</item>
        <item name="android:paddingLeft">@dimen/horizontal_padding</item>
        <item name="android:paddingRight">@dimen/horizontal_padding</item>
        <item name="android:textColor">@drawable/text</item>
    </style>
    <style name="Theme.Main.TextView">
        <item name="android:textColor">@color/text</item>
    </style>
</resources>